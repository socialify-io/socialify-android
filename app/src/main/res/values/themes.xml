<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Socialifyandroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="colorControlHighlight">@color/primary_color</item>
    </style>

    <style name="Theme.Socialifyandroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Socialifyandroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Socialifyandroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
